{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "esModuleInterop" : true,
    "skipLibCheck"    : true,
    "declaration"     : true,
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}